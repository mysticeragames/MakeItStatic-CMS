{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ page.title }}</h1>

    <p>This is a News template</p>

    {% if page.children %}
        <ul>
            {% for page in page.children %}
                <li>{{ page.title|e }}</li>
            {% endfor %}
        </ul>
    {% else %}
        <p>No posts found</p>
    {% endif %}

{% endblock %}
