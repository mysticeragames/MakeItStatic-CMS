{
    "name": "mysticeragames/makeitstatic-cms",
    "description": "MakeItStatic-CMS - Flat-File CMS with Static Website Generator",
    "keywords": [],
    "homepage": "https://github.com/mysticeragames/MakeItStatic-CMS",
    "authors": [
        {
            "name": "Mystic ERA games",
            "email": "info@mysticeragames.com",
            "homepage": "https://www.mysticeragames.com",
            "role": "Developer"
        }
    ],

    "type": "project",
    "license": "MIT",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "~8.4.2",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "league/commonmark": "^2.6.1",
        "symfony/console": "7.2.*",
        "symfony/dotenv": "7.2.*",
        "symfony/filesystem": "7.2.*",
        "symfony/flex": "^2.4.7",
        "symfony/framework-bundle": "7.2.*",
        "symfony/mime": "7.2.*",
        "symfony/process": "7.2.*",
        "symfony/runtime": "7.2.*",
        "symfony/twig-bundle": "7.2.*",
        "symfony/yaml": "7.2.*",
        "twig/extra-bundle": "^3.18",
        "twig/twig": "^3.18"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1.2",
        "phpunit/phpunit": "^11.5.3",
        "squizlabs/php_codesniffer": "^3.11.3",
        "symfony/browser-kit": "7.2.*",
        "symfony/css-selector": "7.2.*",
        "symfony/phpunit-bridge": "^7.2",
        "symfony/string": "7.2.*"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "bump-after-update": true,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "post-create-project-cmd": [
            "cp .gitignore-project .gitignore && rm .gitignore-project",
            "git init && git add . && git commit --quiet -m 'initial'"
        ],
        "test": [
            "docker run --rm -v $(pwd):/repo --workdir /repo rhysd/actionlint:latest -color",
            "@php vendor/bin/phpcs",
            "@php vendor/bin/phpstan analyse src tests",
            "@php vendor/bin/phpunit"
        ],
        "fix": [
            "@php vendor/bin/phpcbf || true",
            "composer test"
        ],
        "git-prune": [
            "git branch -a",
            "git fetch --prune",
            "git branch | grep -v \"main\" | xargs git branch -d || true",
            "git branch -a"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "7.2.*"
        }
    }
}
